{
  "targets": [
    {
      # have to specify "liblib" here since gyp will remove the first one :\
      # Is the above still true?
      "target_name": "libnode_sdl",
      "sources": [
        "src/helpers.cc",
        "src/node_sdl.cc",
        "src/struct_wrappers.cc",
        "src/render.cc",
        "src/texture.cc",
        "src/window.cc",
        "src/surface.cc",
        "src/container.cc",
        "src/sdl_gl.cc",
        "src/event.cc",
        "src/key.cc",
        "src/mouse.cc",
        "src/font.cc",
        "src/joystick.cc",
        "src/controller.cc"
      ],
      "libraries": [
        "/usr/lib/libSDL2.so",
        "/usr/lib/libSDL2_ttf.so",
        "/usr/lib/libSDL2_image.so",
      ],
      "include_dirs": [
        "/usr/local/include/SDL2",
        "/usr/include/SDL2",
        "/usr/include/v8"
      ],
      "defines": [
        "_THREAD_SAFE",
        "ENABLE_ARG_CHECKING",
        "ENABLE_IMAGE",
        "ENABLE_TTF"
      ]
    }
  ]
}
